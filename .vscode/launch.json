    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/app": "${workspaceRoot}",
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "args": ["--no-coverage", "--filter", "${fileBasenameNoExtension}"],
            "program": "${workspaceRoot}/vendor/bin/phpunit",
            "cwd": "${workspaceRoot}",
            "port": 9000
        }
    ]
}